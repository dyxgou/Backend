{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es6",
    "baseUrl": "./",
    "paths": {
      "@controllers/*": ["src/controllers/*"],
      "@libs/*": ["/src/libs/*"],
      "@models/*": ["/src/models/*"],
      "@routes/*": ["/src/routes/*"],
      "@utils/*": ["/src/utils/*"],
      "@middleware/*": ["/src/middlewares/*"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
